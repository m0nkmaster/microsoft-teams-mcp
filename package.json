{
  "name": "team-mcp",
  "version": "0.1.0",
  "description": "MCP server for searching Microsoft Teams via browser automation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "research": "tsx src/research/explore.ts",
    "research:search": "tsx src/research/search-research.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:manual": "tsx src/test/manual-test.ts",
    "test:mcp": "tsx src/test/mcp-harness.ts",
    "cli": "tsx src/test/cli.ts",
    "debug:search": "tsx src/test/debug-search.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "microsoft-teams",
    "playwright",
    "browser-automation"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
